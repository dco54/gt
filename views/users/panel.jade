extends ../templates/default

block content
  p= 'Bienvenido ' + user.nombre
  div(class='row')
    div(class='col-md-6 col-md-offset-3')
      div(class='panel panel-default')
        div(class='panel-heading')= 'Seleccione una Imagen'
        div(class='panel-body')
          form(action='http://http://gt-guiadeturistas.herokuapp.com/users/panel' method='post' autocomplete='off' enctype='multipart/form-data')
            div(class='form-group')
              input(type="file", multiple, name="imagen")
              img.image(src=image width=620 height=320)


            button(type="submit" class='btn btn-default')= 'Iniciar'
            
      div(class='alert alert-success' role='alert')= message
